<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KirKClient"
        xmlns:ViewModel="clr-namespace:KirKClient.ViewModel" x:Class="KirKClient.MainWindow"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Grid.DataContext>
            <ViewModel:ChatViewModel/>
        </Grid.DataContext>
        <ListView x:Name="receivedMessagesListView" ItemsSource="{Binding ReceivedMessages, Mode=TwoWay}"/>
        <TextBox x:Name="inputMessageTextBox" Text="{Binding InputMessage, Mode=TwoWay}"/>
    </Grid>
</Window>
